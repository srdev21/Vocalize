<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF" /> <!-- You can change to any color -->

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#FF3700B3" /> <!-- Optional: border color -->

    <!-- Rounded corners (optional) -->
    <corners android:radius="8dp" /> <!-- Set to 0dp for sharp corners -->

    <!-- Padding inside the shape (optional) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
